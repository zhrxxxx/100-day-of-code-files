{
  "name": "Night Mode",
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "64": "icon.png"
    },

    "default_popup": "popup.html",

    "options_page": "options.html"

  },
    "manifest_version": 3,
    "version": "0.1",
    "description": "Turns the page red when you click the icon",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    }
  }